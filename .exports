# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# JAVA6
#last JDK 6 by Apple
export JAVA_6_HOME=/System/Library/Frameworks/JavaVM.framework/Home
#latest JDK 7 by Oracle
export JAVA_7_HOME=/Library/Java/JavaVirtualMachines/jdk1.7.0_17.jdk/Contents/Home/
#latest preview JDK 8 by Oracle
export JAVA_8_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0.jdk/Contents/Home

#default JDK is  7
export JAVA_HOME=$JAVA_7_HOME

# Groovy 2
export GROOVY_HOME=$HOME/tools/groovy-2.1.2
export PATH=$PATH:$GROOVY_HOME/bin
# Gradle
export GRADLE_HOME=$HOME/tools/gradle-1.8
export GRADLE_OPTS="-Xmx1G -XX:MaxPermSize=512m"
export PATH=$PATH:$GRADLE_HOME/bin
# Ant
export ANT_HOME=/Volumes/data/Users/luciano/tools/apache-ant-1.8.4
export PATH=$PATH:$ANT_HOME/bin

# EC2
export EC2_HOME=$HOME/tools/ec2-api-tools-1.6.7.2
export PATH="$EC2_HOME/bin:$PATH"
export EC2_KEY_DIR=$HOME/.ec2
#export EC2_PRIVATE_KEY=${EC2_KEY_DIR}/pk-ZECWGBTU62SW66H3OKQRAPU2QPB7XFIB.pem
#export EC2_CERT=${EC2_KEY_DIR}/cert-ZECWGBTU62SW66H3OKQRAPU2QPB7XFIB.pem
#export AWS_ACCESS_KEY_ID=AKIAJOEDNPAOPYS3TK5Q
#export AWS_SECRET_ACCESS_KEY=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
source .ec2-properties
export AWS_EC2_REGION=eu-west-1

# PACKER
export PATH=$PATH:$HOME/packer
# virtualenv should use Distribute instead of legacy setuptools
export VIRTUALENV_DISTRIBUTE=true
# Centralized location for new virtual environments
export PIP_VIRTUALENV_BASE=$HOME/Virtualenvs
# pip should only run if there is a virtualenv currently activated
export PIP_REQUIRE_VIRTUALENV=true
# cache pip-installed packages to avoid re-downloading
export PIP_DOWNLOAD_CACHE=$HOME/.pip/cache

# RUBY, RBENV
export CC=gcc
PATH="/usr/local/var/rbenv/shims:$PATH"
export RBENV_ROOT=/usr/local/var/rbenv
